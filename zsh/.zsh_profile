export XDG_CONFIG_HOME=$HOME/.config
VIM="nvim"

PERSONAL=$XDG_CONFIG_HOME/personal
source $PERSONAL/env
for i in $(find -L $PERSONAL); do
    source $i
done
source /usr/local/opt/fzf/shell/key-bindings.zsh
source /usr/local/opt/fzf/shell/completion.zsh

source $XDG_CONFIG_HOME/xero/aws-doctor.plugin.zsh
source $XDG_CONFIG_HOME/xero/aws.plugin.zsh

export GIT_EDITOR=$VIM
export PYENV_ROOT="$HOME/.pyenv"
#export NVM_DIR="$HOME/.nvm"

export HISTFILESIZE=1000000000
export HISTSIZE=1000000000
export HISTFILE=~/.zsh_history
setopt INC_APPEND_HISTORY
export HISTTIMEFORMAT="[%F %T] "
setopt EXTENDED_HISTORY

addToPathFront $HOME/.local/.npm-global/bin
addToPathFront $HOME/.local/bin
addToPathFront $HOME/go/bin
addToPathFront $PYENV_ROOT/bin
addToPathFront $HOME/.local/scripts
addToPathFront $HOME/.dotnet
addToPathFront $HOME/.dotnet/tools

command -v pyenv >/dev/null || addToPathFront $PYENV_ROOT/bin
eval "$(pyenv init -)"


